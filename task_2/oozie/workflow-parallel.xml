<workflow-app xmlns='uri:oozie:workflow:0.1' name='${workflow_name}'>
    <start to="forking"/>
     <fork name="forking">
      <path start="spark-process_1"/>
      <path start="spark-process_2"/>
    </fork>
    <action name='spark-process_1'>
        <spark xmlns="uri:oozie:spark-action:0.1">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <master>${master}</master>
            <mode>${mode}</mode>
            <name>${child_app}</name>
            <class>clear</class>
            <jar>${PythonPath}/producer_ok.py</jar>
             <spark-opts>
             </spark-opts>
        </spark>
        <ok to="joining" />
        <error to="kill" />
    </action>
     <action name='spark-process_2'>
        <spark xmlns="uri:oozie:spark-action:0.1">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <master>${master}</master>
            <mode>${mode}</mode>
            <name>${child_app}</name>
            <class>clear</class>
            <jar>${PythonPath}/producer_ok1.py</jar>
             <spark-opts>
             </spark-opts>
        </spark>
        <ok to="joining" />
        <error to="kill" />
    </action>
    <join name="joining" to="end"/>
    <kill name="kill">
        <message>Workflow failed, error
            message[${wf:errorMessage(wf:lastErrorNode())}]
        </message>
    </kill>
    <end name='end' />
</workflow-app>