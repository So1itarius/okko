<workflow-app xmlns='uri:oozie:workflow:0.1' name='${workflow_name}'>
    <start to='spark-node1'/>
    <action name='spark-node1'>
        <spark xmlns="uri:oozie:spark-action:0.1">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <master>${master}</master>
            <mode>${mode}</mode>
            <name>${child_app}</name>
            <class>clear</class>
            <jar>${PythonPath}/producer_ok.py</jar>
             <spark-opts>
             </spark-opts>
        </spark>
        <ok to="spark-node2" />
        <error to="kill" />
    </action>
     <action name='spark-node2'>
        <spark xmlns="uri:oozie:spark-action:0.1">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <master>${master}</master>
            <mode>${mode}</mode>
            <name>${child_app}</name>
            <class>clear</class>
            <jar>${PythonPath}/producer_ok1.py</jar>
             <spark-opts>
             </spark-opts>
        </spark>
        <ok to="end" />
        <error to="kill" />
    </action>
    <kill name="kill">
        <message>Workflow failed, error
            message[${wf:errorMessage(wf:lastErrorNode())}]
        </message>
    </kill>
    <end name='end' />
</workflow-app>